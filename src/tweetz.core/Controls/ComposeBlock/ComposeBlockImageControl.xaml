<UserControl
  x:Class="tweetz.core.Controls.ComposeBlock.ComposeBlockImageControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:commands="clr-namespace:tweetz.core.Commands"
  xmlns:converters="clr-namespace:tweetz.core.Infrastructure.Converters"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:tweetz.core.Controls.ComposeBlock"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:services="clr-namespace:tweetz.core.Services"
  d:DesignHeight="50"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <StackPanel
    Margin="0,1.5"
    Orientation="Horizontal"
    Visibility="{Binding Mode=OneWay, Converter={converters:NotNullToVisibilityConverter}}">
    <Button
      Command="commands:RemoveImageCommand.Command"
      CommandParameter="{Binding Path, Mode=OneWay}"
      Content="{StaticResource XSymbol}"
      FontFamily="{StaticResource SymbolFont}"
      FontSize="10"
      ToolTip="{services:LanguageService remove-tooltip}" />
    <TextBlock
      Text="{Binding Path, Mode=OneWay, Converter={converters:FileNameConverter}}"
      ToolTip="{Binding Path, Mode=OneWay}" />
  </StackPanel>
</UserControl>