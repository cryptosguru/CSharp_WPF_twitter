<UserControl
  x:Class="tweetz.core.Controls.MediaViewerBlock.MediaViewerBlockControls"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:tweetz.core.Controls.MediaViewerBlock"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  Background="{DynamicResource StandardBackgroundBrush}"
  mc:Ignorable="d">

  <Grid Margin="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Slider
      Grid.Column="0"
      Margin="10,0"
      Maximum="100"
      Minimum="0"
      TickPlacement="None" />

    <UniformGrid Grid.Column="1" Rows="1">
      <Button Width="30">P</Button>
      <Button Width="30">C</Button>
    </UniformGrid>
  </Grid>
</UserControl>