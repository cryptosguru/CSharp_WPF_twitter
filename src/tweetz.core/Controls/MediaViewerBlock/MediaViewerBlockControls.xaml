<UserControl
  x:Class="tweetz.core.Controls.MediaViewerBlock.MediaViewerBlockControls"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:tweetz.core.Controls.MediaViewerBlock"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Background="{DynamicResource StandardBackgroundBrush}"
  d:DesignHeight="50"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <Border
    BorderBrush="{DynamicResource StandardBorderBrush}"
    BorderThickness="0,0.6,0,0">

    <Grid Margin="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <ProgressBar
        x:Name="ProgressIndicator"
        Grid.Column="0"
        Height="2"
        Margin="10,0"
        Maximum="100"
        Minimum="0" />

      <UniformGrid
        Grid.Column="1"
        Rows="1">
        <Button
          Content="{StaticResource SkipBackSymbol}"
          FontFamily="{StaticResource SymbolFont}" />
        <Button
          Content="{StaticResource PauseSymbol}"
          FontFamily="{StaticResource SymbolFont}" />
        <Button
          Content="{StaticResource CopyClipboardSymbol}"
          FontFamily="{StaticResource SymbolFont}" />
      </UniformGrid>
    </Grid>
  </Border>
</UserControl>