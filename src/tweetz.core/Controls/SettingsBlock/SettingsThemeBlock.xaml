<UserControl
  x:Class="tweetz.core.Controls.SettingsBlock.SettingsThemeBlock"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="50"
  d:DesignWidth="300"
  mc:Ignorable="d">

  <UserControl.Resources>
    <Style
      x:Key="SettingsRadioButton"
      TargetType="RadioButton">
      <Setter Property="VerticalContentAlignment" Value="Bottom" />
      <Setter Property="Height" Value="19" />
    </Style>
  </UserControl.Resources>

  <StackPanel>
    <TextBlock Text="{StaticResource theme-title}" />

    <Separator />

    <UniformGrid
      Width="160"
      Columns="2">

      <RadioButton
        Content="{StaticResource theme-light}"
        GroupName="t"
        IsChecked="{Binding Theme, Converter={StaticResource CompareToConverter}, ConverterParameter=light}"
        Style="{StaticResource SettingsRadioButton}" />

      <RadioButton
        Content="{StaticResource theme-dark}"
        GroupName="t"
        IsChecked="{Binding Theme, Converter={StaticResource CompareToConverter}, ConverterParameter=dark}"
        Style="{StaticResource SettingsRadioButton}" />
    </UniformGrid>
  </StackPanel>
</UserControl>