<UserControl
  x:Class="tweetz.core.Controls.TweetCommandsControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:commands="clr-namespace:tweetz.core.Commands"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="25"
  d:DesignWidth="200"
  mc:Ignorable="d">

  <UserControl.Resources>
    <Style
      x:Key="TextBlockStyle"
      BasedOn="{StaticResource BaseTextBlockStyle}"
      TargetType="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}" />
      <Setter Property="Margin" Value="0,0,12,0" />
      <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style
      x:Key="RetweetSymbolStyle"
      BasedOn="{StaticResource SymbolStyle}"
      TargetType="Run">
      <Style.Triggers>
        <DataTrigger
          Binding="{Binding RetweetedByMe}"
          Value="True">
          <Setter Property="Foreground" Value="Green" />
        </DataTrigger>
      </Style.Triggers>
    </Style>

    <Style
      x:Key="LikeSymbolStyle"
      BasedOn="{StaticResource SymbolStyle}"
      TargetType="Run">
      <Style.Triggers>
        <DataTrigger
          Binding="{Binding Favorited}"
          Value="True">
          <Setter Property="Foreground" Value="Firebrick" />
        </DataTrigger>
      </Style.Triggers>
    </Style>

    <Style
      x:Key="FollowSymbolStyle"
      BasedOn="{StaticResource SymbolStyle}"
      TargetType="Run">
      <Style.Triggers>
        <DataTrigger
          Binding="{Binding User.IsFollowing}"
          Value="True">
          <Setter Property="Foreground" Value="{StaticResource TwitterBlue}" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>

  <!--  End Resources  -->

  <StackPanel Orientation="Horizontal">
    <TextBlock
      Style="{StaticResource TextBlockStyle}"
      ToolTip="{StaticResource reply-tooltip}">
      <Run
        Style="{StaticResource SymbolStyle}"
        Text="{StaticResource ReplySymbol}" />

      <TextBlock.InputBindings>
        <MouseBinding
          Command="commands:ReplyToCommand.Command"
          CommandParameter="{Binding Mode=OneWay}"
          Gesture="LeftClick" />
      </TextBlock.InputBindings>
    </TextBlock>

    <TextBlock
      Style="{StaticResource TextBlockStyle}"
      ToolTip="{StaticResource retweet-tooltip}">
      <Run
        Style="{StaticResource RetweetSymbolStyle}"
        Text="{StaticResource RetweetSymbol}" />
      <Run Text="{Binding RetweetCount, Mode=OneWay, Converter={StaticResource CountConverter}}" />

      <TextBlock.InputBindings>
        <MouseBinding
          Command="commands:ToggleRetweetCommand.Command"
          CommandParameter="{Binding}"
          Gesture="LeftClick" />
      </TextBlock.InputBindings>
    </TextBlock>

    <TextBlock
      Style="{StaticResource TextBlockStyle}"
      ToolTip="{StaticResource like-tooltip}">
      <Run
        Style="{StaticResource LikeSymbolStyle}"
        Text="{StaticResource LikeSymbol}" />
      <Run Text="{Binding FavoriteCount, Mode=OneWay, Converter={StaticResource CountConverter}}" />

      <TextBlock.InputBindings>
        <MouseBinding
          Command="commands:ToggleFavoritesCommand.Command"
          CommandParameter="{Binding}"
          Gesture="LeftClick" />
      </TextBlock.InputBindings>
    </TextBlock>

    <TextBlock
      Style="{StaticResource TextBlockStyle}"
      ToolTip="{StaticResource retweet-with-comment-tooltip}">
      <Run
        Style="{StaticResource SymbolStyle}"
        Text="{StaticResource QuoteSymbol}" />

      <TextBlock.InputBindings>
        <MouseBinding
          Command="commands:QuoteTweetCommand.Command"
          CommandParameter="{Binding Mode=OneWay}"
          Gesture="LeftClick" />
      </TextBlock.InputBindings>
    </TextBlock>

    <TextBlock
      Style="{StaticResource TextBlockStyle}"
      ToolTip="{StaticResource follow-tooltip}">
      <Run
        Style="{StaticResource FollowSymbolStyle}"
        Text="{StaticResource AddFriendSymbol}" />
      <Run Text="{Binding User.Followers, Mode=OneWay, Converter={StaticResource CountConverter}}" />

      <TextBlock.InputBindings>
        <MouseBinding
          Command="commands:ToggleFollowCommand.Command"
          CommandParameter="{Binding}"
          Gesture="LeftClick" />
      </TextBlock.InputBindings>
    </TextBlock>
  </StackPanel>
</UserControl>