<UserControl
  x:Class="tweetz.core.Controls.UserProfileBlock.UserProfileNameBadgeBlock"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="100"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <UserControl.Resources />

  <TextBlock
    Grid.Row="0"
    Margin="0,5,0,0"
    TextWrapping="Wrap">
    <Run
      FontWeight="Bold"
      Text="{Binding Name, Mode=OneWay}" />
    <InlineUIContainer BaselineAlignment="Center">
      <Path
        Data="{StaticResource TwitterVerifiedBadge}"
        Style="{StaticResource TwitterBadgeStyle}"
        Visibility="{Binding Verified, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </InlineUIContainer>
  </TextBlock>
</UserControl>